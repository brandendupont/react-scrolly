{
  "compilerOptions": {
    "baseUrl": "./packages",
    "incremental": true,
    "outDir": "lib",
    "module": "esnext",
    "target": "es2018",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "../node_modules/@types",
      "../types"
    ],
    "types": ["react"]
  }
}
